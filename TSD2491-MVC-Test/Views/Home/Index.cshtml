@model TSD2491_MVC_Test.Models.MatchingGameModel
@{
    ViewData["Title"] = "Matching Game";
}

<style>
    .container {
        width: 400px;
    }

    button {
        width: 100px;
        height: 100px;
        font-size: 50px;
    }
</style>

<h1>@ViewData["Title"]</h1>
<h2>TSD2491 - Oblig 1</h2>

<div class="container">
    <div class="row">
        @for (var animalNumber = 0; animalNumber < Model.ShuffledEmoji.Count; animalNumber++)
        {
            var animal = Model.ShuffledEmoji[animalNumber];
            var uniqueDescription = $"Button #{animalNumber}";
            <div class="col-3">
                @using (Html.BeginForm("ButtonClick", "Home", FormMethod.Post))
                {
                    
                    <input type="hidden" name="animal" value="@animal"/>
                    <input type="hidden" name="uniqueDescription" value="@uniqueDescription"/>
                    <input type="submit" value="@animal" class=" btn button"/>
                }
            </div>
        }
    </div>
    <div class="row">
        <h2>Matches found: <span id="matches-found">@Model.MatchesFound</span></h2>
    </div>
    <div class="row">
        <h2>Time: <span id="time-display">@Model.TimeDisplay</span></h2>
    </div>
</div>